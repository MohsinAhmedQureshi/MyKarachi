<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:elevation="12dp"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    app:contentPadding="16dp"
    tools:cardBackgroundColor="@color/colorBlack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/verifiedNewsDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Mohsin Ahmed"
            tools:textColor="@color/colorWhite" />


        <!-- RATING LAYOUT -->

        <LinearLayout
            android:id="@+id/verifiedNewsRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verifiedNewsDisplayName"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/verifiedNewsStar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_round_star_border_24px"
                tools:src="@drawable/ic_round_star_24px" />

            <ImageView
                android:id="@+id/verifiedNewsStar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_round_star_border_24px"
                tools:src="@drawable/ic_round_star_24px" />

            <ImageView
                android:id="@+id/verifiedNewsStar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_round_star_border_24px"
                tools:src="@drawable/ic_round_star_24px" />

            <ImageView
                android:id="@+id/verifiedNewsStar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_round_star_border_24px" />

            <ImageView
                android:id="@+id/verifiedNewsStar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_round_star_border_24px" />

        </LinearLayout>


        <TextView
            android:id="@+id/verifiedNewsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verifiedNewsRating"
            android:fontFamily="@font/nunito_sans"
            android:paddingBottom="16dp"
            android:paddingTop="12dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/colorBlack"
            tools:text="Due to office closing time traffic is moving slow in districts South, East, West, City, Malir, Korangi &amp; Central Please drive carefully, Traffic staff is present and managing traffic."
            tools:textColor="@color/colorWhite" />

        <LinearLayout
            android:id="@+id/verifiedNewsLocationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verifiedNewsText"
            android:orientation="horizontal"
            android:paddingStart="-4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_round_location_on_24px"
                android:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/verifiedNewsLocation"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center_vertical"
                android:textStyle="italic"
                tools:text="Johar Chowrangi, Gulistan-e-Johar"
                tools:textColor="@android:color/darker_gray" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verifiedNewsLocationLayout"
            android:orientation="horizontal">

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>