<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:elevation="12dp"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    app:contentPadding="16dp"
    tools:cardBackgroundColor="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tweetProfilePicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_round_account_circle_24px"
            tools:tint="@color/colorWhite" />

        <TextView
            android:id="@+id/tweetDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/tweetProfilePicture"
            android:fontFamily="@font/nunito_sans_semibold"
            android:paddingTop="6dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Display Name"
            tools:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tweetUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweetDisplayName"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/tweetProfilePicture"
            android:fontFamily="@font/nunito_sans"
            android:paddingTop="2dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            tools:text="UserName"
            tools:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tweetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweetProfilePicture"
            android:fontFamily="@font/nunito_sans"
            android:paddingTop="12dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/colorBlack"
            tools:text="Due to office closing time traffic is moving slow in districts South, East, West, City, Malir, Korangi &amp; Central Please drive carefully, Traffic staff is present and managing traffic .\nTRAFFIC AWARENESS \nAND SOCIAL MEDIA UNIT \nDIG TRAFFIC KARACHI."
            tools:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tweetTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tweetText"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_sans"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:textColor="@color/colorBlack"
            tools:text="10-09-2018 - 6:14 PM"
            tools:textColor="@color/colorWhite" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>